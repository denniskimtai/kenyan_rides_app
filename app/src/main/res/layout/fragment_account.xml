<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey">


    <LinearLayout
        android:orientation="vertical"
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:background="@color/colorPrimaryDark"
            android:layout_alignParentLeft="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Account"
                android:textColor="@color/white"
                android:textSize="20dp"/>

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_list_vehicles"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:background="@color/white">

                <LinearLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_list"
                        android:tint="@color/dark_grey"
                        android:gravity="center_horizontal"
                        android:layout_margin="20dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Listed Vehicles"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:gravity="center_horizontal"
                        android:layout_marginBottom="10dp"/>



                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_bookings"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/white">

                <LinearLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/reg_year_icon"
                        android:tint="@color/dark_grey"
                        android:gravity="center_horizontal"
                        android:layout_margin="20dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Bookings"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:gravity="center_horizontal"
                        android:layout_marginBottom="10dp"/>



                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>



        <androidx.cardview.widget.CardView
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/white">


            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PROFILE"
                    android:textColor="@color/dark_grey"
                    android:textSize="15dp"
                    android:layout_margin="10dp"
                    android:textStyle="bold"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_weight="1"
                        android:background="@drawable/input_shape"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/dark_grey"
                        >

                        <EditText
                            android:id="@+id/edtxt_first_name"
                            android:layout_weight="1"
                            android:textColor="@color/dark_grey"
                            android:paddingLeft="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="First Name"
                            android:textSize="15dp"
                            />


                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_weight="1"
                        android:background="@drawable/input_shape"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/dark_grey"
                        >

                        <EditText
                            android:id="@+id/edtxt_second_name"
                            android:layout_weight="1"
                            android:textColor="@color/dark_grey"
                            android:paddingLeft="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Second Name"
                            android:textSize="15dp"
                            />


                    </com.google.android.material.textfield.TextInputLayout>



                </LinearLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:background="@drawable/input_shape"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/dark_grey"
                    >

                    <EditText
                        android:id="@+id/edtxt_id"
                        android:inputType="number"
                        android:layout_weight="1"
                        android:textColor="@color/dark_grey"
                        android:paddingLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="National ID Number"
                        android:textSize="15dp"
                        />


                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:background="@drawable/input_shape"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/dark_grey"
                    >

                    <EditText
                        android:id="@+id/edtxt_mobile_number"
                        android:inputType="phone"
                        android:layout_weight="1"
                        android:textColor="@color/dark_grey"
                        android:paddingLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Mobile Number"
                        android:textSize="15dp"
                        />


                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:background="@drawable/input_shape"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/dark_grey"
                    >

                    <EditText
                        android:id="@+id/edtxt_email_address"
                        android:inputType="textEmailAddress"
                        android:layout_weight="1"
                        android:textColor="@color/dark_grey"
                        android:paddingLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email Address"
                        android:textSize="15dp"
                        />


                </com.google.android.material.textfield.TextInputLayout>



                    <TextView
                        android:id="@+id/edtxt_date_of_birth"
                        android:layout_margin="10dp"
                        android:background="@drawable/input_shape"
                        android:layout_weight="1"
                        android:padding="15dp"
                        android:textColor="@color/dark_grey"
                        android:paddingLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date of Birth"
                        android:textSize="15dp"
                        />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_weight="1"
                        android:background="@drawable/input_shape"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/dark_grey"
                        >

                        <EditText
                            android:id="@+id/edtxt_city"
                            android:layout_weight="1"
                            android:textColor="@color/dark_grey"
                            android:paddingLeft="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="City"
                            android:textSize="15dp"
                            />


                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_weight="1"
                        android:background="@drawable/input_shape"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/dark_grey"
                        >

                        <EditText
                            android:id="@+id/edtxt_country"
                            android:layout_weight="1"
                            android:textColor="@color/dark_grey"
                            android:paddingLeft="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Country"
                            android:textSize="15dp"
                            />


                    </com.google.android.material.textfield.TextInputLayout>



                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:background="@drawable/input_shape"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/dark_grey"
                    >

                    <EditText
                        android:id="@+id/edtxt_address"
                        android:lines="5"
                        android:layout_weight="1"
                        android:textColor="@color/dark_grey"
                        android:paddingLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Address"
                        android:textSize="15dp"
                        />


                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSaveChanges"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="SAVE CHANGES"
                    android:textColor="@color/white"
                    android:background="@drawable/buttom_background"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    />



            </LinearLayout>

        </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/txt_sign_out"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="* SIGN OUT *"
                android:textColor="@color/colorPrimary"
                android:textSize="15dp"
                android:gravity="center_horizontal"
                android:layout_marginBottom="70dp"/>



    </LinearLayout>
</ScrollView>