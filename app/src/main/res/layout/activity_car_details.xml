                                android:gravity="center_horizontal"
                                android:textColor="#878783"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Seats"
                                android:textSize="15dp"/>

                            <TextView
                                android:layout_marginBottom="5dp"
                                android:gravity="center_horizontal"
                                android:textColor="#878783"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
