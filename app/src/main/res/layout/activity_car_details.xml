                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kitengela"
                        android:textColor="#878783"
                        android:textSize="15dp"
