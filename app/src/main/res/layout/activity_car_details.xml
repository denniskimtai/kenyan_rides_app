                android:layout_marginBottom="3dp"
                android:id="@+id/card_renter_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:layout_below="@+id/card_accessories">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
