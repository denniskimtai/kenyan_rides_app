<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Edit Vehicle"
                android:textColor="@color/white"
                android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtViewVehicleStatus"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Online"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:gravity="right"/>

                <Switch
                    android:id="@+id/switchVehicleStatus"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginRight="10dp"
                    android:checked="true"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Basic Info"
            android:textColor="#6E6E6D"
            android:textSize="12dp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/input_shape"
            android:textColorHint="@color/dark_grey">

            <EditText
                android:id="@+id/edit_text_vehicle_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Vehicle Title"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textSize="12dp" />


        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Brand"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

                <Spinner
                    android:id="@+id/brand_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/input_shape"
                    android:backgroundTint="@color/grey"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Fuel"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

                <Spinner
                    android:id="@+id/fuel_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/input_shape"
                    android:backgroundTint="@color/grey"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Seats"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

                <Spinner
                    android:id="@+id/seats_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/input_shape"
                    android:backgroundTint="@color/grey"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

            </LinearLayout>


        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/input_shape"
            android:textColorHint="@color/dark_grey"
            android:textSize="12dp">

            <EditText
                android:id="@+id/edit_text_vehicle_overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:hint="Vehicle Overview"
                android:lines="4"
                android:textColor="@color/black"
                android:textColorHint="@color/dark_grey"
                android:textSize="12dp" />


        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Driver Status"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

                <Spinner
                    android:layout_marginRight="10dp"
                    android:id="@+id/driver_status_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/input_shape"
                    android:backgroundTint="@color/grey"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Location"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

                <fragment
                    android:background="@drawable/input_shape"
                    android:id="@+id/place_autocomplete_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment" />


            </LinearLayout>


        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/input_shape"
            android:textColorHint="@color/black"
            android:textSize="12dp">

            <EditText
                android:inputType="number"
                android:id="@+id/edit_text_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Price Per Day(in Ksh) Enter number only"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/dark_grey"
                android:textSize="12dp" />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/input_shape"
            android:textColorHint="@color/black"
            android:textSize="12dp">

            <EditText
                android:inputType="number"
                android:id="@+id/edit_text_model_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Vehicle Model Year"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/dark_grey"
                android:textSize="12dp" />


        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/dark_grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:weightSum="3">

            <ImageView
                android:id="@+id/image1_file_path"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_weight="2"
                android:src="@drawable/mazda"/>

            <TextView
                android:id="@+id/image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Change Image"
                android:background="@drawable/input_shape"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:weightSum="3">

            <ImageView
                android:id="@+id/image2_file_path"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_weight="2"
                android:src="@drawable/mazda"/>

            <TextView
                android:id="@+id/image2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Change Image"
                android:background="@drawable/input_shape"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:weightSum="3">

            <ImageView
                android:id="@+id/image3_file_path"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_weight="2"
                android:src="@drawable/mazda"/>

            <TextView
                android:id="@+id/image3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Change Image"
                android:background="@drawable/input_shape"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:weightSum="3">

        <ImageView
            android:id="@+id/image4_file_path"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_weight="2"
            android:src="@drawable/mazda"/>

        <TextView
            android:id="@+id/image4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="Change Image"
            android:background="@drawable/input_shape"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:textStyle="bold" />


    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:weightSum="3">

            <ImageView
                android:id="@+id/image5_file_path"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_weight="2"
                android:src="@drawable/mazda"/>

            <TextView
                android:id="@+id/image5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Change Image"
                android:background="@drawable/input_shape"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/dark_grey" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Vehicle Accessories"
            android:textColor="#6E6E6D"
            android:textSize="12dp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/chkbox_airconditioner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPrimary"
            android:text="Air Conditioner"
            android:textColor="@color/black" />

        <CheckBox
            android:id="@+id/chkbox_power_door_locks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPrimary"
            android:text="Power Door Locks"
            android:textColor="@color/black" />

        <CheckBox
            android:id="@+id/chkbox_anti_lock_braking_system"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPrimary"
            android:text="Anti Lock Braking System"
            android:textColor="@color/black" />

        <CheckBox
            android:id="@+id/chkbox_brake_assist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPrimary"
            android:text="Brake Assist"
            android:textColor="@color/black" />

        <CheckBox
            android:id="@+id/chkbox_power_steering"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPrimary"
            android:text="Power Steering"
            android:textColor="@color/black" />

        <CheckBox
            android:id="@+id/chkbox_driver_airbag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPrimary"
            android:text="Driver Airbag"
            android:textColor="@color/black" />

        <CheckBox
            android:id="@+id/chkbox_passenger_airbag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPrimary"
            android:text="Passenger Airbag"
            android:textColor="@color/black" />

        <CheckBox
            android:id="@+id/chkbox_power_windows"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPrimary"
            android:text="Power Windows"
            android:textColor="@color/black" />

        <CheckBox
            android:id="@+id/chkbox_cdplayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPrimary"
            android:text="CD Player"
            android:textColor="@color/black" />

        <CheckBox
            android:id="@+id/chkbox_central_locking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPrimary"
            android:text="Central Locking"
            android:textColor="@color/black" />

        <CheckBox
            android:id="@+id/chkbox_crash_sensor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPrimary"
            android:text="Crash Sensor"
            android:textColor="@color/black" />

        <CheckBox
            android:id="@+id/chkbox_leather_seats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPrimary"
            android:text="Leather Seats"
            android:textColor="@color/black" />


        <Button
            android:id="@+id/btnPostVehicle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="70dp"
            android:background="@drawable/buttom_background"
            android:padding="15dp"
            android:text="Edit Vehicle"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>